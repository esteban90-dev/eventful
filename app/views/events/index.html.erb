<div class="container mt-3">

  <div class="row">
    <div class="col-md-12 d-flex justify-content-center bg-light mt-4 mb-4">
      <h2>Upcoming Events</h2>
    </div>
  </div>

  <div class="row">
    <table class="table table-bordered table-sm">
      <tr>
        <th>Name</th>
        <th>Location</th>
        <th>Time</th>
        <th>Creator</th>
      </tr>
      <% @upcoming_events.each do |event| %>
        <% if Time.now < event.time %>
          <tr>
            <td><%= link_to event.name, event_path(event) %></td>
            <td><%= event.location %></td>
            <td><%= event.time %></td>
            <td><%= link_to event.host.name, user_path(event.host) %></td>
          </tr>
        <% end %>
      <% end %>
    </table>
  </div>

  <%= render 'shared/to_create_event' %>

  <div class="row">
    <div class="col-md-12 d-flex justify-content-center bg-light mt-4 mb-4">
      <h2>Past Events</h2>
    </div>
  </div>

  <div class="row mb-5">
    <table class="table table-bordered table-sm">
      <tr>
        <th>Name</th>
        <th>Location</th>
        <th>Time</th>
        <th>Creator</th>
      </tr>
      <% @past_events.each do |event| %>
        <% if Time.now > event.time %>
          <tr>
            <td><%= link_to event.name, event_path(event) %></td>
            <td><%= event.location %></td>
            <td><%= event.time %></td>
            <td><%= link_to event.host.name, user_path(event.host) %></td>
          </tr>
        <% end %>
      <% end %>
    </table>
  </div>

</div>



