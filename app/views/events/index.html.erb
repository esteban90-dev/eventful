<h1>Events</h1>

<h3>Upcoming Events</h3><br>
<table>
  <tr>
    <th>Name</th>
    <th>Location</th>
    <th>Time</th>
    <th>Creator</th>
  </tr>
  <% @upcoming_events.each do |event| %>
    <% if Time.now < event.time %>
      <tr>
        <td><%= link_to event.name, event_path(event) %></td>
        <td><%= event.location %></td>
        <td><%= event.time %></td>
        <td><%= link_to event.host.name, user_path(event.host) %></td>
      </tr>
    <% end %>
  <% end %>
</table>

<br><br>

<%= link_to "Create Event", new_event_path %>

