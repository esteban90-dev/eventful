<h1>Events</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Location</th>
    <th>Time</th>
    <th>Creator</th>
  </tr>
  <% @events.each do |event| %>
    <tr>
      <td><%= link_to event.name, event_path(event) %></td>
      <td><%= event.location %></td>
      <td><%= event.time %></td>
      <td><%= event.host.name %></td>
    </tr>
  <% end %>
</table>