<div class="container mt-3">

  <div class="row">
    <div class="col-md-12 d-flex justify-content-center">
      <h2>Event Details</h2>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12 d-flex justify-content-center">
      <table class="table table-bordered table-sm">
        <tr>
          <th>Name</th>
          <th>Location</th>
          <th>Time</th>
          <th>Creator</th>
        </tr>
        <tr>
          <td><%= @event.name %></td>
          <td><%= @event.location %></td>
          <td><%= @event.time %></td>
          <td><%= @event.host.name %></td>
        </tr>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-md-2">
      <table class="table table-bordered table-sm">
        <tr>
          <th>Attendees</th>
        </tr>
        <% @event.attendees.each do |attendee| %>
          <tr>
            <td><%= attendee.name %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>

  <% if @event.host.name == current_user.name %>
    <div class="row">
      <div class="col-md-12 d-flex justify-content-end mt-3">
        <%= link_to "Edit event", edit_event_path(@event) %>
      </div>
    </div>
  <% end %>
  <%= render 'shared/to_events' %>
</div>


